<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.torbennils.tictactoe.Main_Activity"
    tools:showIn="@layout/activity_main_">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <TextView
            android:text="@string/Spieler_Auswahl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textStyle="normal|bold|italic"
            android:layout_marginLeft="5dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Spieler 1"
            android:ems="10"
            android:id="@+id/editText_Spieler1"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Spieler 2"
            android:ems="10"
            android:id="@+id/editText_Spieler2"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:text="@string/KI_Auswahl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textStyle="normal|bold|italic"
            android:layout_marginLeft="5dp"
            android:textAlignment="center" />

        <CheckBox
            android:text="Crazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_KiAuswahl1"
            android:duplicateParentState="true"
            android:checked="false" />

        <CheckBox
            android:text="Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_KiAuswahl2" />

        <CheckBox
            android:text="Boss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_KiAuswahl3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            android:layout_weight="0.82" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
