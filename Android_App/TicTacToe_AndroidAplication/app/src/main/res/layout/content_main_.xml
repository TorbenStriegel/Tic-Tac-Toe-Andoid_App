<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.torbennils.tictactoe.Main_Activity"
    tools:showIn="@layout/activity_main_">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Spieler 1"
            android:ems="10"
            android:id="@+id/editText_Spieler1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Spieler 2"
            android:ems="10"
            android:id="@+id/editText_Spieler2" />

        <CheckBox
            android:text="gegen dein Handy :D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_KiAuswahl"
            android:duplicateParentState="true"
            android:checked="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            android:layout_weight="0.94" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
