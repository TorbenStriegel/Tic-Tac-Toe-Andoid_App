<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.torbennils.tictactoe.TicTacToe_Activity">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_tic_tac_toe_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_tic_tac_toe_">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <TextView
            android:text="Herzlich Wilkommen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_spiel"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Spieler 1:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_spieler1"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColorLink="?attr/colorControlActivated"
                android:textColor="@android:color/holo_green_dark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_weight="1" />

            <TextView
                android:text="Spieler 2:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_spieler2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonTicTacToe_horizontal_high">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_0"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_1"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_2"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonTicTacToe_horizontal_high">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_3"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_4"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_5"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonTicTacToe_horizontal_high">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_6"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_7"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonTicTacToe_horizontal_high"
                android:id="@+id/buttonSpiel_8"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/darker_gray"
                android:background="@android:drawable/alert_light_frame" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="57dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>